<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="343.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.ridebuddies.LoginController">
   <children>
      <AnchorPane prefHeight="350.0" prefWidth="395.0">
         <children>
            <Label layoutX="158.0" layoutY="12.0" prefHeight="46.0" prefWidth="102.0" text="LOGIN">
               <font>
                  <Font size="31.0" />
               </font>
            </Label>
            <Label layoutX="92.0" layoutY="99.0" text="username" />
            <Label layoutX="93.0" layoutY="143.0" text="password" />
            <TextField fx:id="usernameField" layoutX="179.0" layoutY="95.0" />
            <PasswordField fx:id="passwordField" layoutX="179.0" layoutY="139.0" />
            <Button layoutX="14.0" layoutY="22.0" mnemonicParsing="false" onAction="#switchToWelcome" text="&lt;-" />
            <Button layoutX="247.0" layoutY="203.0" mnemonicParsing="false" onAction="#switchToRegister" prefHeight="20.0" prefWidth="79.0" text="Create account">
               <font>
                  <Font size="9.0" />
               </font>
            </Button>
            <Label layoutX="90.0" layoutY="204.0" text="Don't have an account?" />
            <Button layoutX="91.0" layoutY="244.0" mnemonicParsing="false" onAction="#loginButtonOnAction" prefHeight="18.0" prefWidth="236.0" text="Login">
               <font>
                  <Font size="17.0" />
               </font>
            </Button>
            <Button fx:id="cancelButton" layoutX="91.0" layoutY="288.0" mnemonicParsing="false" onAction="#setCancelButtonOnAction" prefHeight="18.0" prefWidth="236.0" text="Cancel">
               <font>
                  <Font size="17.0" />
               </font>
            </Button>
            <Label fx:id="invalidLabel" layoutX="118.0" layoutY="166.0" prefHeight="18.0" prefWidth="192.0" text="Invalid login username or password" textFill="RED">
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
